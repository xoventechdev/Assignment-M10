    <div class="container mb-3">
        <section id="file-create">
            <h2 class="text-primary text-center mt-5">File Create</h2>
            <p class="text-center ">Create a demo file in the node app</p>

            <div class="row justify-content-center">
                <div class="col-sm-10 col-md-8 col-lg-6">

                    <div class="alert" role="alert">

                    </div>
                    <form id="createFile" method="post">
                        <div class="form-group">
                            <label for="createFile">File Name</label>
                            <input type="text" class="form-control" id="fileName" placeholder="Enter file name">
                        </div>
                        <div class="form-group">
                            <label for="createData">Data for file</label>
                            <input type="text" class="form-control" id="fileContent" placeholder="Enter file data">
                        </div>
                        <button type="submit" class="btn btn-primary mt-1">Create File</button>
                    </form>
                </div>
            </div>
        </section>

        <section id="fileList">
            <h2 class="text-primary text-center mt-5">List of created File</h2>
            <p class="text-center ">All created file are here in the table</p>
            <div class="row justify-content-center">
                <div class="col-sm-10 col-md-8 col-lg-6">

                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">Number</th>
                                <th scope="col">File Name</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% let file_number=1; %>
                                <% files.forEach(file=> { %>
                                    <tr>
                                        <td>
                                            <%= file_number %>
                                        </td>
                                        <td>
                                            <%= file %>
                                        </td>
                                        <td>
                                            <a class="btn btn-primary" href="/file-view?fileName=<%= file %>">View</a>
                                            <a class="btn btn-warning"
                                                href="/fileDelete?fileName=<%= file %>">Delete</a>
                                        </td>
                                    </tr>
                                    <% file_number++; %>
                                        <% }); %>
                        </tbody>
                    </table>


                </div>
            </div>

        </section>
